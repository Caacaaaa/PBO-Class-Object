public class Pasien{

  private String nama;
  private int umur;
  private String penyakit;

  public Pasien(){
    this.nama = "Hanni";
    this.umur = 20;
    this.penyakit = "Flu";
  }

  public Pasien(String nama, int umur, String penyakit){
    this.nama = nama;
    this.umur = umur;
    this.penyakit = penyakit;
  }

  public void tampilkanData(boolean tampilkanPenyakit){
    System.out.println("Nama Pasien: " + nama);
    System.out.println("Umur: " + umur + "tahun");
    if (tampilkanPenyakit){
        System.out.println("Penyakit: " + penyakit);
    }else{
        System.out.println("Penyakit: Tidak diketahui");
  }
}

public static void main(String[] args){
  Pasien p1 = new Pasien();
  Pasien p2 = new Pasien("Haerin", 21, "Demam");

  System.out.println("Pasien 1");
  p1.tampilkanData();
  System.out.println("Pasien 2");
  p2.tampilkanData();

  System.out.println("Pasien 2 (nama dan umur)");
  p2.tampilkanData(false);
}
}
